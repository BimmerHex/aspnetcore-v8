@model ProductListViewModel

<h5>Index Page</h5>

@if (Model.Products.Count() == 0)
{
    <p>Ürün bulunamadı.</p>
}

@foreach (var product in Model.Products)
{
    <div>
        <h4>@product.Name</h4>
        <p>@product.Description</p>
        <p>@product.Price</p>
    </div>
}

<div page-model="@Model.PageInfo" page-action="Index"></div>